# ============================================
# ERP Presu - Variables de entorno (raíz)
# Para docker-compose / Cloud Run
# ============================================

# ---- Base de datos ----
# LOCAL (docker-compose con PG local)
POSTGRES_DB=erp_presu
POSTGRES_USER=erp_admin
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# PRODUCCIÓN (Google Cloud SQL) - solo se usa DATABASE_URL directamente
# DATABASE_URL=postgresql://erp_admin:PASSWORD@/erp_presu?host=/cloudsql/erppresu:europe-southwest1:erp-presu-db

# ---- Google Cloud ----
GCP_PROJECT_ID=erppresu
GCP_REGION=europe-southwest1
CLOUD_SQL_INSTANCE=erp-presu-db

# ---- Firebase ----
FIREBASE_PROJECT_ID=erppresu

# ---- Frontend (Firebase client SDK - inyectadas en build) ----
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
